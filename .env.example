# Landomo Core Service API
LANDOMO_API_URL=https://core.landomo.com/api/v1
LANDOMO_API_KEY=your_api_key_here

# Scraper Configuration
DEBUG=false

# Rate Limiting
REQUEST_DELAY_MS=2000
MAX_CONCURRENT_REQUESTS=3

# Redis (for queue-based scraping)
# Used for distributed processing, deduplication, and resumability
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# Prometheus Metrics
METRICS_PORT=9090                     # Port for /metrics endpoint
METRICS_UPDATE_INTERVAL=15000         # Update interval in ms (15 seconds)

# Scraper Database (Tier 1) - REQUIRED for Phase 2
# Stores raw data, change history, and adaptive scheduling metadata
SCRAPER_DB_HOST=localhost
SCRAPER_DB_PORT=5432
SCRAPER_DB_NAME=scraper_czech_sreality
SCRAPER_DB_USER=landomo
SCRAPER_DB_PASSWORD=your_password_here

# Optional: Proxy Configuration
# PROXY_URL=
# PROXY_USERNAME=
# PROXY_PASSWORD=
